{% block stylesheets %}
    <style>
        /* Background and basic colors */
        body {
            background-color: #0D1520;
            color: #C2E6FF;
        }
        .container {
            background-color: #111927;
            padding: 2rem;
            border-radius: 8px;
        }

        /* Header styles */
        .portfolio-title {
            color: #0090FF;
            font-size: 2.5rem;
            font-weight: bold;
            text-align: center;
        }
        .portfolio-subtitle {
            color: #70B8FF;
            font-size: 1.2rem;
            text-align: center;
            margin-bottom: 1rem;
        }

        /* Dropdown styles */
        .dropdown-custom {
            background-color: #111927;
            border: 1px solid #205D9E;
            border-radius: 0px;
            padding: 0;
        }
        .dropdown-item-custom {
            color: #C2E6FF;
            background-color: #111927;
            padding: 10px 20px;
        }
        .dropdown-item-custom:hover {
            background-color: #205D9E;
            color: #C2E6FF;
        }

        /* Card styles */
        .card {
            background-color: #111927;
            border: 1px solid #205D9E;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            color: #C2E6FF;
        }
        .card-img-top {
            border-bottom: 2px solid #104D87;
            border-radius: 8px 8px 0 0;
        }
        .card-title {
            color: #0090FF;
            font-weight: bold;
        }
        .card-text {
            color: #70B8FF;
        }
        .btn-primary {
            background-color: #0090FF;
            border: none;
        }
        .btn-primary:hover {
            background-color: #3B9EFF;
        }
